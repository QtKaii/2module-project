{% extends 'base.html.twig' %}

{% block title %}Thank You for Ordering!{% endblock %}

{% block content %}
    <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-lg">
        <h1 class="mt-10 text-center text-3xl font-bold tracking-tight text-green-600">Thank You for Your Order!</h1>
        
        <p class="mt-4 text-center text-lg text-gray-700">
            Weâ€™ve successfully received your order and are currently processing it. You will receive an email confirmation shortly with the details of your purchase.
        </p>
    </div>

    <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-2xl">
        <div class="flex flex-col gap-6">
            {% set total = 0 %}
            {% set products = [
                {'name': 'Product A', 'price': 29.99},
                {'name': 'Product B', 'price': 49.99},
                {'name': 'Product C', 'price': 19.99}
            ] %}

            {% for product in products %}
                <div class="flex items-center justify-between bg-white p-4 rounded-lg shadow">
                    <span class="text-lg font-medium text-gray-800">{{ product.name }}</span>
                    <span class="text-lg text-gray-600">${{ product.price | number_format(2) }}</span>
                </div>
                {% set total = total + product.price %}
            {% endfor %}

            <div class="flex items-center justify-between bg-gray-100 p-4 rounded-lg shadow mt-4">
                <span class="text-xl font-semibold text-gray-900">Total</span>
                <span class="text-xl font-semibold text-green-600">${{ total | number_format(2) }}</span>
            </div>
        </div>
    </div>
{% endblock %}
