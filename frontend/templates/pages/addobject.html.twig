{% extends 'base.html.twig' %}

{% block title %}Generic Form for adding object to DB{% endblock %}

{% block content %}
<form action={{ action }} method="post" style="width: 50%; margin: 0 auto;">
{% for field in fields %}
    <div style="margin-bottom: 10px;">
        <label for="{{ field.name }}" style="display: block;">{{ field.label }}</label>
        <input type="{{ field.type }}" name="{{ field.name }}" id="{{ field.name }}" value="{{ field.value }}" style="width: 100%; padding: 5px;">
    </div>
{% endfor %}
<input type="submit" value="Submit" style="background-color: #4CAF50; color: white; padding: 10px 20px; border: none; cursor: pointer;">
</form>

{% endblock %}