{% extends 'base.html.twig' %}
{% block title %}Cart{% endblock %} 
{% block content %}
    <section class="py-8 md:py-16">
        <div class="mx-auto max-w-screen-xl px-4 2xl:px-0">
            <div class="mt-6 flow-root sm:mt-8">
                <div class="divide-y divide-gray-200 dark:divide-gray-700">
                    {% if cartItems is empty %}
                        <div class="text-center py-8">
                            <p class="text-gray-600">Your cart is empty</p>
                            <a href="/" class="mt-4 inline-block text-indigo-600 hover:text-indigo-500">
                                Browse Products
                            </a>
                        </div>
                    {% else %}
                        {% for item in cartItems %}
                            {% include 'components/cart-row.html.twig' with {
                                'name': item.product.title,
                                'price': '$' ~ item.product.price,
                                'id': item.product.id,
                                'salesId': item.salesid
                            } %}
                        {% endfor %}

                        <div class="flex flex-col sm:flex-row justify-end items-stretch sm:items-center gap-3 mt-8 border-t pt-6 dark:border-gray-700">
                            <a href="/" class="inline-flex justify-center rounded-lg border border-gray-200 bg-white px-4 py-2 text-sm font-medium text-gray-900 hover:bg-gray-50 hover:text-primary-600 focus:outline-none focus:ring-4 focus:ring-gray-100 dark:border-gray-600 dark:bg-gray-800 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white dark:focus:ring-gray-700">Continue Shopping</a>
                            <a href="/order" class="inline-flex justify-center rounded-lg border border-transparent bg-indigo-600 px-4 py-2 text-sm font-medium text-white hover:bg-indigo-700 focus:outline-none focus:ring-4 focus:ring-indigo-300 dark:bg-indigo-600 dark:hover:bg-indigo-700 dark:focus:ring-indigo-800">Proceed to Checkout</a>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </section>
{% endblock %}
