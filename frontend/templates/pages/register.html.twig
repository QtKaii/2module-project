{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block content %}
<div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
    <h1 class="mt-10 text-center text-2xl/9 font-bold tracking-tight text-gray-900">Create Account</h1>
    
    <form class="mt-8 space-y-6" method="post" action="/register">
        {% include 'components/form-input.html.twig' with {
            'name': 'username',
            'placeholder': 'Username',
            'required': true
        } %}

        {% include 'components/form-input.html.twig' with {
            'name': 'email',
            'type': 'email',
            'placeholder': 'Email address',
            'required': true
        } %}

        {% include 'components/form-input.html.twig' with {
            'name': 'password',
            'type': 'password',
            'placeholder': 'Password',
            'required': true,
            'context': 'register'
        } %}

        {% include 'components/form-input.html.twig' with {
            'name': 'password_confirm',
            'type': 'password',
            'placeholder': 'Confirm Password',
            'required': true,
            'context': 'register'
        } %}

        <div class="text-sm">
            <a href="/login" class="font-semibold text-indigo-600 hover:text-indigo-500">
                Already have an account? Sign in
            </a>
        </div>

        {% include 'components/button.html.twig' with {
            'type': 'submit',
            'text': 'Create Account',
            'style': 'primary'
        } %}
    </form>
</div>
{% endblock %}