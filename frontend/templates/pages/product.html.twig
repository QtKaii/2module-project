{% extends 'base.html.twig' %}

{% block title %}
	{{ product.title }}
{% endblock %}

{% block content %}
	<div class="container mx-auto py-8 px-4">
		<div class="max-w-4xl mx-auto bg-white rounded-lg shadow-md overflow-hidden">
			<div class="md:flex">
				<div class="md:flex-shrink-0">
					<img class="h-96 w-full object-contain md:w-96" src="{{ product.image|default('https://placehold.co/400') }}" alt="{{ product.name }}">
				</div>
				<div class="p-8">
					<h1 class="text-3xl font-bold text-gray-900 mb-4">
						{{ product.name }}
					</h1>
					<p class="text-gray-600 text-lg mb-6">
						{{ product.description }}
					</p>
					<div class="mb-8">
						<span class="text-2xl font-bold text-blue-600">
							${{ product.base_price }}
						</span>
					</div>

					{% include 'components/button.html.twig' with {
                    'text': 'Add to Cart',
                    'style': 'primary',
                    'type': 'button'
                } %}

					<a href="/" class="mt-4 inline-block text-indigo-600 hover:text-indigo-500">
						‚Üê Back to Products
					</a>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
