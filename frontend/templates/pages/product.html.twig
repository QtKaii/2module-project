{% extends 'base.html.twig' %}

{% block title %}{{ product.title }}{% endblock %}

{% block content %}
<div class="container mx-auto py-8 px-4">
    <div class="max-w-4xl mx-auto bg-white rounded-lg shadow-md overflow-hidden">
        <div class="md:flex">
        
            <div class="md:flex-shrink-0">
                <img class="h-96 w-full object-contain md:w-96" 
                     src="{{ product.image|default('https://placehold.co/400') }}" 
                     alt="{{ product.title }}">
            </div>

            <div class="p-8">
                <h1 class="text-3xl font-bold text-gray-900 mb-4">
                    {{ product.title }}
                </h1>
                <p class="text-gray-600 text-lg mb-6">
                    {{ product.description }}
                </p>
                <div class="mb-8">
                    <span class="text-2xl font-bold text-blue-600">
                        ${{ product.price }}
                    </span>
                </div>
                
                {% include 'components/button.html.twig' with {
                    'text': 'Add to Cart',
                    'style': 'primary',
                    'type': 'button'
                } %}

                <a href="/" class="mt-4 inline-block text-indigo-600 hover:text-indigo-500">
                    ‚Üê Back to Products
                </a>
            </div>
        </div>
    </div>

    <br><br>
    <div class="max-w-4xl mx-auto bg-white rounded-lg shadow-md overflow-hidden">
        <div class="md:flex">
            <div class="p-8">
                <p class="text-2xl font-bold text-blue-600">
                    {{ "Enter Comment" }}
                </p>
                <br>
                <form action="/submit/comment" method="POST">
                    <div class="mb-8">
                        <textarea name="comment" class="border rounded-lg p-2 w-full" placeholder="Type your comment" required></textarea>
                        <input type='hidden' name="productID" value='{{ product.id }}'
                    </div>
                    
                    {% include 'components/button.html.twig' with {
                        'text': 'Submit Comment',
                        'style': 'primary',
                        'type': 'submit'
                    } %} 
                </form>
            </div>
        </div>
    </div>
    <hr>
    <div class="max-w-4xl mx-auto bg-white rounded-lg shadow-md overflow-hidden">
        <div class="md:flex">
            <div class="p-8">
                <h1 class="text-3xl font-bold text-gray-900 mb-4">
                    {{ "Comments" }}
                </h1>

                <p class="text-gray-600 text-lg mb-6">
                    {{ "Username" }}
                </p>
                <div class="mb-8">
                    <span class="text-2xl font-bold text-blue-600">
                        ${{ "erfjvq iefjqdvnojirenfmvoewrnmed rwfcnq    ofrcn..." }}
                    </span>
                </div>

            </div>
        </div>
    </div>
</div>
{% endblock %}