{% extends 'base.html.twig' %}

{% block title %}
	{{ product.title }}
{% endblock %}

{% block content %}
	<div class="container mx-auto py-8 px-4">
		<div class="max-w-4xl mx-auto bg-white rounded-lg shadow-md overflow-hidden">
			<div class="md:flex">

				<div class="md:flex-shrink-0">
					<img class="h-96 w-full object-contain md:w-96" src="{{ product.image|default('https://placehold.co/400') }}" alt="{{ product.title }}">
				</div>

				<div class="p-8">
					<h1 class="text-3xl font-bold text-gray-900 mb-4">
						{{ product.title }}
					</h1>
					<p class="text-gray-600 text-lg mb-6">
						{{ product.description }}
					</p>
					<div class="mb-8">
						<span class="text-2xl font-bold text-blue-600">
							€{{ product.price }}
						</span>
					</div>

					<div class="flex gap-4 mb-4">
						<form action="/cart/add" method="POST">
							<input type="hidden" name="productId" value="{{ product.id }}">
							{% include 'components/button.html.twig' with {
                            'text': 'Add to Cart',
                            'style': 'primary',
                            'type': 'submit'
                        } %}
						</form>

						<form action="/wishlist/add" method="POST">
							<input type="hidden" name="productId" value="{{ product.id }}">
							{% include 'components/button.html.twig' with {
                            'text': 'Add to Wishlist',
                            'style': 'secondary',
                            'type': 'submit'
                        } %}
						</form>

						{% if isProductSeller %}
							<form action="/update/product/edit" method="POST">
								<input type="hidden" name="edit" value="{{ product.id }}">
								{% include 'components/button.html.twig' with {
                            'text': 'Edit Product',
                            'style': 'secondary',
                            'type': 'submit'
                        } %}
							</form>
						{% endif %}
					</div>

					<a href="/" class="inline-block text-indigo-600 hover:text-indigo-500">
						← Back to Products
					</a>
				</div>
			</div>
		</div>

		<br><br>
		<div class="max-w-4xl mx-auto bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden">
			<div class="p-8">
				<div class="flex items-center justify-between border-b border-gray-200 dark:border-gray-700 pb-4 mb-4">
					<h3 class="text-xl font-semibold text-gray-900 dark:text-white">Leave a Comment</h3>
				</div>
				<form action="/submit/comment" method="POST" class="space-y-4">
					{% if session.user %}
                    <div>
						<label for="comment" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Your comment</label>
						<textarea name="comment" id="comment" rows="4" class="block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 dark:border-gray-600 dark:bg-gray-700 dark:text-white sm:text-sm" placeholder="Share your thoughts about this product..." required></textarea>
						<input type="hidden" name="productID" value="{{ product.id }}">
					</div>
					
						{% include 'components/button.html.twig' with {
                    'text': 'Post Comment',
                    'style': 'primary',
                    'type': 'submit',
                    'class': 'w-full sm:w-auto'
                } %}

						<!-- put your 0 html here -->
					{% elseif not session.user %}
						<p> Please <a class="text-blue-600" href="/login">Login</a> to Continue </p>
					{% endif %}


				</form>
			</div>
		</div>
		<div class="max-w-4xl mt-8 mx-auto bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden">
			<div class="p-8">
				<div class="flex items-center justify-between border-b border-gray-200 dark:border-gray-700 pb-4 mb-4">
					<h3 class="text-xl font-semibold text-gray-900 dark:text-white">Comments</h3>
					<span class="text-sm text-gray-500 dark:text-gray-400">{{ comments|length }}
						comment(s)</span>
				</div>

				{% if comments is empty %}
					<div class="text-center py-6">
						<p class="text-gray-500 dark:text-gray-400">No comments yet. Be the first to comment!</p>
					</div>
				{% else %}
					<div class="space-y-4">
						{% for comment in comments %}
							{% include 'components/comment.html.twig' with {
                            'username': '',
                            'userInitial': comment.userID|slice(0, 1),
                            'comment': comment.comment
                        } %}
						{% endfor %}
					</div>
				{% endif %}
			</div>
		</div>
	</div>
{% endblock %}
