<div class="flex flex-col sm:flex-row items-start sm:items-center justify-between gap-4 py-6 px-4 bg-white dark:bg-gray-800 rounded-lg shadow-sm hover:shadow-md transition-shadow">
    <div class="flex flex-col sm:flex-row items-start sm:items-center gap-4 sm:gap-8">
        <dl>
            <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Item</dt>
            <dd class="mt-1 text-base font-semibold text-gray-900 dark:text-white">
                <a href="/product/{{ id|default(1) }}" class="hover:text-primary-600 hover:underline">{{ name|default('Sunglasses') }}</a>
            </dd>
        </dl>
        
        <dl>
            <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Price</dt>
            <dd class="mt-1 text-base font-semibold text-gray-900 dark:text-white">{{ price|default('') }}</dd>
        </dl>
    </div>

    <div class="flex flex-col sm:flex-row items-stretch sm:items-center gap-2 sm:gap-4 w-full sm:w-auto">
        <form action="/cart/remove" method="POST" class="w-full sm:w-auto">
            <input type="hidden" name="salesId" value="{{ salesId }}">
            {% include 'components/button.html.twig' with {
                'text': 'Remove',
                'style': 'danger',
                'type': 'submit',
                'class': 'w-full sm:w-auto'
            } %}
        </form>
        <a href="/product/{{ id|default(1) }}" class="inline-flex justify-center rounded-lg border border-gray-200 bg-white px-4 py-2 text-sm font-medium text-gray-900 hover:bg-gray-50 hover:text-primary-600 focus:outline-none focus:ring-4 focus:ring-gray-100 dark:border-gray-600 dark:bg-gray-800 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white dark:focus:ring-gray-700 w-full sm:w-auto">View Product</a>
    </div>
</div>
</div>
