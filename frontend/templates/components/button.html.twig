<button 
    type="{{ type|default('button') }}"
    class="flex w-full justify-center rounded-md {{ 
        style|default('primary') == 'primary' 
            ? 'bg-indigo-600 text-white hover:bg-indigo-500' 
            : 'bg-gray-200 text-gray-700 hover:bg-gray-300'
    }} px-3 py-1.5 text-sm/6 font-semibold shadow-xs focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600"
    {% if disabled|default(false) %}disabled{% endif %}
>
    {{ text|default('Submit') }}
</button>