<div class="py-4 border-b border-gray-200 dark:border-gray-700 last:border-0">
    <div class="flex items-start space-x-3">
        <div class="flex-shrink-0">
            <div class="h-10 w-10 rounded-full bg-gray-200 dark:bg-gray-700 flex items-center justify-center">
                <span class="text-gray-500 dark:text-gray-400 text-sm font-medium">
                    {{ userInitial|default('U')|upper }}
                </span>
            </div>
        </div>
        <div class="min-w-0 flex-1">
            <div class="text-sm font-medium text-gray-900 dark:text-white">{{ username|default('User') }}</div>
            <div class="mt-1 text-sm text-gray-700 dark:text-gray-300">
                {{ comment }}
            </div>
        </div>
    </div>
</div>
